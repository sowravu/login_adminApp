

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="style.css">
</head>
<script>
    function validateForm() {
            // Validate name
            const name = document.getElementById('name').value.trim();
            if (name.length < 4 || /\s/.test(name))
             {
                alert('Name must be at least 4 characters long and must not contain spaces or numbers.');
                return false;
            }

            // Validate mobile number
            const mobile = document.getElementById('mobile').value.trim();
            const mobileRegex = /^\d{10}$/;
            if (!mobileRegex.test(mobile)) {
                alert('Mobile number must be exactly 10 digits long.');
                return false;
            }

            // Validate email
            const email = document.getElementById('email').value.trim();
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                alert('Please enter a valid email address.');
                return false;
            }

            // Validate password (Optional: Add your own password validation rules if needed)
            const password = document.getElementById('password').value.trim();
            if (password.length < 6) {
                alert('Password must be at least 6 characters long.');
                return false;
            }

            return true;
    }
</script>
<body>
    <div class="form-container">
        <h1>User Registration</h1>
        <div>
            <%
            if(typeof message!=='undefined'){
                %>
                <h4 style="color:red"><%=message%></h4>
            <%}
            %>
        </div>
        <form action="/register" method="post" onsubmit="return validateForm()">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="username" placeholder="enter your name" >
        </div>
        <div class="form-group">
            <label for="mobile">Mobile</label>
            <input type="text" id="mobile" name="mobile" placeholder="mobile" >
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="email" >
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="password">
        </div>
        <button type="submit" class="submit-btn">Register</button>
    </form>
   <a href="/login" style="text-decoration: none;">Already registered</a>
    </div>
   
</body>
</html>

 
